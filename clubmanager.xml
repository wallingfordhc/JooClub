<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2.0" method="upgrade">

  <name>Club Manager</name>
  <!-- The following elements are optional and free of formatting constraints -->
  <creationDate>May 2017</creationDate>
  <author>David Shannon</author>
  <authorEmail>david.shannon@wallingfordhc.org.uk</authorEmail>
  <authorUrl>www.wallingfordhc.org.uk</authorUrl>
  <copyright>Copyright Info</copyright>
  <license>License Info</license>
  <!--  The version string is recorded in the components table -->
  <version>0.0.7</version>
  <!-- The description is optional and defaults to the name -->
  <description>Description of the Club Manager Component</description>

  <update>
    <!-- Runs on update; New since J2.5 -->
    <schemas>
      <schemapath type="mysql">sql/updates/mysql</schemapath>
    </schemas>
  </update>

  <!-- Site Main File Copy Section -->
  <!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
  <files folder="site">
    <filename>index.html</filename>
    <filename>clubmanager.php</filename>
    <filename>controller.php</filename>
    <folder>views</folder>
    <folder>models</folder>
  </files>

  <administration>
    <!-- Administration Menu Section -->
    <menu link='index.php?option=com_clubmanager'>Club Manager</menu>
    <submenu>
      <menu link='index.php?option=com_clubmanager' view='Players'>Players</menu>
      <menu link='index.php?option=com_clubmanager' view='Groups'>Groups</menu>
      <menu link='index.php?option=com_clubmanager' view='Matches'>Matches</menu>
      <menu link='index.php?option=com_clubmanager' view='Attendance'>Attendance</menu>
    </submenu>
    <!-- Administration Main File Copy Section -->
    <!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
    <files folder="admin">
      <!-- Admin Main File Copy Section -->
      <filename>index.html</filename>
      <filename>clubmanager.php</filename>
      <filename>controller.php</filename>
      <!-- SQL files section -->
      <folder>sql</folder>
      <folder>views</folder>
      <folder>models</folder>
      <folder>tables</folder>
    </files>
  </administration>

</extension>